{
    "tasks": [
        {   // CONFIG 0 (default): Uses current file and folder you are currently viewing.
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {   // CONFIG A (build)
            "label": "buildJson",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "a.out"                                         // MAKE SURE "a.out" IS THE COMPILED FILE!
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {   // CONFIG A (valgrind)        --> Memory error detector (check "postDebugTask": "valgrind" in 'launch.json')
            "label": "valgrindJson",    
            "type": "shell",
            "command": "valgrind",
            "args": ["--leak-check=full", "${fileDirname}/a.out"]   // MAKE SURE "a.out" IS THE COMPILED FILE! (check also 'launch.json': "program": "${workspaceFolder}/a.out" to be the same compiled file!)
        },
        {   // CONFIG B (build)
            "label": "buildFromFile",
            "type": "shell",
            "command": "./build.sh",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {   // CONFIG B (valgrind)        --> Memory error detector (check "postDebugTask": "valgrind" in 'launch.json')
            "label": "valgrindFromFile",    
            "type": "shell",
            "command": "valgrind",
            "args": ["--leak-check=full", "${fileDirname}/a.out"]   // MAKE SURE "a.out" IS THE COMPILED FILE! (check also 'launch.json': "program": "${workspaceFolder}/a.out" to be the same compiled file!)
        }
    ],
    "version": "2.0.0"
}
